<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<security-role>
	  <role-name>role1</role-name>
	</security-role>
	
	<security-constraint>
	
		<web-resource-collection>
			<web-resource-name>Security</web-resource-name>
			<url-pattern>/se/security02.jsp</url-pattern>
			<http-method>GET</http-method>
		</web-resource-collection>
		
		<auth-constraint>
			<description>사용자</description>
			<role-name>role1</role-name>
		</auth-constraint>
	</security-constraint>
	
	<login-config>
	<auth-method>FORM</auth-method>
	 <form-login-config>
		<form-login-page>/se/login.jsp</form-login-page>
		<form-error-page>/se/login_failed.jsp</form-error-page>
	 </form-login-config>
	</login-config>
	
</web-app>